# Database Configuration
POSTGRES_DB=n8n
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=your_secure_n8n_db_password_here
POSTGRES_PORT=5432

# N8N Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_n8n_password_here
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# N8N Advanced Configuration
NODE_ENV=production
EXECUTIONS_PROCESS=own
EXECUTIONS_MODE=regular
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console
GENERIC_TIMEZONE=UTC

# N8N Community Nodes Configuration
N8N_COMMUNITY_PACKAGES_ENABLED=true
N8N_NODES_EXCLUDE=
N8N_NODES_INCLUDE=
N8N_DISABLE_UI=false
N8N_DISABLE_PRODUCTION_MAIN_PROCESS=false

# N8N Security Configuration
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# Optional Redis Configuration (for queue mode)
# QUEUE_BULL_REDIS_HOST=redis
